{
  "compilerOptions": {
    "target": "ES2021",                         
    "module": "commonjs",                       
    "outDir": "./dist",                         
    "rootDir": "./src",                         
    "strict": true,                             
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,   
    "skipLibCheck": true,                       
    "resolveJsonModule": true,                  
    "moduleResolution": "node",                 
    "sourceMap": true,                          
    "noImplicitAny": true,                      
    "types": ["node"],                          
    "incremental": true                         
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}
